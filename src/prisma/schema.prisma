////////////////////////////////////////////////////////////////////////////////
//////////////////////////////// DB SETTINGS ///////////////////////////////////
////////////////////////////////////////////////////////////////////////////////
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

////////////////////////////////////////////////////////////////////////////////
/////////////////////////// Model: User  //////////////////////////////////
////////////////////////////////////////////////////////////////////////////////
model User {
  id           Int       @id @default(autoincrement()) @db.Int
  uuid         String    @unique
  nickname     String    @db.VarChar(20)
  email        String
  gender       Boolean
  phone_number String    @unique @db.VarChar(11)
  birthday     Int?      @db.Int
  role         Int //0: user 1: admin ...etc
  created_at   DateTime?
  updated_at   DateTime?
  deleted_at   DateTime?

  tokens User_token[]
}

////////////////////////////////////////////////////////////////////////////////
/////////////////////////// Model: User_token  ///////////////////////////////
////////////////////////////////////////////////////////////////////////////////
model User_token {
  id            Int      @id @default(autoincrement()) @db.Int
  refresh_token String   @unique
  ip            String
  refresh_count Int
  user_agent    String
  user          User     @relation(fields: [user_id], references: [id])
  user_id       Int      @unique
  valid         Boolean
  created_at    DateTime @db.Date
  updated_at    DateTime @db.Date
}
